echo; echo;read -p "Please provide the new password: " upass; db=`grep -i db_name wp-config.php |awk -F"'" '{print $4}'` user=`grep -i db_user wp-config.php | awk -F"'" '{print $4}'` pass=`grep -i db_pass wp-config.php |awk -F"'" '{print $4}'` pre=`grep -i table_prefix wp-config.php | awk -F"'" '{print $2}'` prefix=$pre\users;output=$(mysql -u $user -p$pass -vve "use $db; select * from $prefix where ID='1';  update $prefix set user_pass=MD5('$upass') where ID='1'" | grep -A 1 user_login | grep -v user_login);url=$(mysql -u $user -p$pass -e "use $db ; select option_value from ${pre}options where option_name='siteurl'" | awk '{print$1}' | tail -1); echo; echo; echo "PASSWORD RESET"; echo "Login URL: "$url"/wp-admin"; echo -ne "Username: "; echo $output | awk '{print$2}' ; echo -ne "New Admin Password: "; echo -ne $upass; echo; echo;

